<div class="card-columns">
  <% posts.each do |post| %>
    <div class="card">
      <div class="bd-placeholder-img card-img">
        <%= link_to post_path(post) do %>
          <div class="post-size">
            <%= image_tag post.image.url %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= paginate posts %>
</div>