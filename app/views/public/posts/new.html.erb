<%= form_with model: @post, local:true do |f| %>
  <%= render 'layouts/error', obj: @post %>
  <%= f.label "写真" %><br>
  <%= f.attachment_field :image %><br>
  <%= f.label "タイトル" %><br>
  <%= f.text_field :title, autofocus: true, placeholder: "例）海と私" %><br><br>
  <%= f.text_field :tag_ids, id: 'tag_ids', placeholder: "タグをつける。複数つける場合は半角スペースを入れてくださ" %><br><br>
  <%= f.label "撮影機器・アプリ" %><br>
  <%= f.text_field :photo_app, autofocus: true, placeholder: "iPhone12,Foodie" %><br><br>
  <%= f.label "撮影フィルター" %><br>
  <%= f.text_field :photo_filter , autofocus: true, placeholder: "ULikeのCharisma" %><br><br>
  <%= f.label "加工アプリ" %><br>
  <%= f.text_field :fix_app , autofocus: true, placeholder: "Snapseed" %><br>
  <%= f.label "加工フィルター" %><br>
  <%= f.text_field :fix_filter , autofocus: true, placeholder: "iPhoneの写真編集の自動" %><br><br>
  <%= f.label "露出" %>
  <%= f.text_field :exposure , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "ハイライト" %>
  <%= f.text_field :highlight , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "ブリリアンス" %>
  <%= f.text_field :burilliance , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "シャドウ" %>
  <%= f.text_field :shadow , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "コントラスト" %>
  <%= f.text_field :contrast , autofocus: true, placeholder: "-100 〜 +100" %><br><br>
  <%= f.label "明るさ" %>
  <%= f.text_field :brightness , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "彩度" %>
  <%= f.text_field :saturation , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "暖かみ" %>
  <%= f.text_field :warmth , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "シャープネス" %>
  <%= f.text_field :sharpness , autofocus: true, placeholder: "-100 〜 +100" %>
  <%= f.label "説明" %>
  <%= f.text_area :body, autofocus: true, placeholder: "主役のスイーツをかなり近くから撮影しました" %>
  <%= f.submit '投稿' %>
<% end %>