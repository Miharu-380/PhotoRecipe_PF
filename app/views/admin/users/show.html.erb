<div class="container">
    <div class="row mt-3 mb-3">
      <div class="col-md-6 mx-auto">
        <h3><%= @user.name %>さんの会員詳細</h3>
        <table class="table table-inversemt-3">
          <tr>
            <td class="mt-2" style="width: 30%;">会員ID</td>
            <td style="width: 70%;"><%= @user.id %></td>
          </tr>
          <tr>
            <td class="mt-2">名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="mt-2">ユーザーネーム</td>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <td class="mt-2">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td class="mt-2">会員ステータス</td>
            <td>
              <% if @user.is_deleted == true %>
               <p class="text-secondary mt-2">退会</p>
              <% else %>
                <p class="text-success mt-2">有効</p>
             <% end %>
            </td>
          </tr>
        </table>
      <div class="d-flex justify-content-center">
        <%= link_to "編集する", edit_user_path, class: 'btn btn-success col-4 mr-3' %>
        <%= link_to "トップに戻る", admin_root_path, class: 'btn btn-primary col-4' %>
      </div>
    </div>
  </div>
</div>
